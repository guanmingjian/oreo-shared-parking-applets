page {
  background-color: #eaeef1;
}

.bar{
  display: flex;
  position: relative;
}

.area{
  height: 54px;
  flex: 1; 
  background-color: #fff;
  text-align: center;
  line-height: 108rpx;
  color: #323233;
  font-size: 25rpx;
  padding-left: 15rpx;
}
.icon-below-s {
  font-size: 20rpx;
}
.search_input {
  flex: 5;
}
.showList{
  padding-top: 15rpx;
  background-color: #fff;
}
.showList .showItem {
  padding: 20rpx 25rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
}
.showList .showItem .content{
  flex: 5;
}
.showList .showItem .icon {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 20rpx;
}
.showList .showItem .icon text {
  font-size: 55rpx;
  margin-bottom: 8rpx;
}
.showList .showItem .content .name {
  font-size: 36rpx;
  font-weight: 600;
  padding: 10rpx 20rpx 0;
}
.showList .showItem .content .addr {
  padding: 20rpx 20rpx 0;
  font-size: 33rpx;
}