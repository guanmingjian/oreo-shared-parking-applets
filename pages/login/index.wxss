.login {
	width: 600rpx;
	margin: 0 auto;
	font-size: 28rpx;
	color: #000
}

.login button {
	font-size: 28rpx;
	background: #000;
	color: #fff;
	height: 90rpx;
	line-height: 90rpx;
	border-radius: 50rpx;
	z-index:999
}

.login input {
	padding: 0 20rpx 0 120rpx;
	height: 90rpx;
	line-height: 90rpx;
	margin-bottom: 50rpx;
	background: #f4f4f4;
	font-size: 28rpx;
	border-radius: 50rpx
}

.login .input {
	position: relative
}

.login .input image {
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	left: 40rpx;
	top: 28rpx;
	border-right: 2rpx solid #dedede;
	padding-right: 20rpx
}

.login .title {
	text-align: center;
	font-size: 46rpx;
	color: #000;
	padding: 100rpx 0
}

.login .sendBtn {
	position: absolute;
	right: 22rpx;
	top: 22rpx;
	background: #000;
	color: #fff;
	font-size: 24rpx;
	border-radius: 50rpx;
	height: 50rpx;
	line-height: 50rpx;
	padding: 0 25rpx
}

.login .tips {
	text-align: center;
	color: #999;
	margin: 80rpx 0
}

.login .loginMethod {
	text-align: center;
	width: 250rpx;
	margin: 80rpx auto 0
}

.login .icon {
	float: left;
	width: 50%
}

.login .loginMethod image {
	width: 50rpx;
	height: 50rpx
}

.login .contract  {
	text-align: center;
	margin: 80rpx 0 0 0;
  color: #666;
  font-size: 30rpx
}

.login .contract  text {
	margin-left: 8rpx;
	color: #999
}

.login .uni-input-placeholder {
	color: #000
}

.box1 {
	zoom: 1
}

.box1::after {
	clear: both;
	display: block;
	visibility: hidden;
	height: 0;
	content: '\20'
}