Page {
  background-color: #eaeef1;
  padding-bottom: 50px;
}

.main {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding-top: 36rpx;
}
.main .title {
  font-weight: 600;
  font-size: 38rpx;
}
.pt {
  padding-top: 24rpx;
}
.main .descri {
  color: #7f8c8d;
  padding-bottom: 14rpx;
}

.btn_box {
  background-color: #fff;
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn {
  width: 700rpx;
  background-color: #1989fa;
  border: 1px solid #1989fa;
  color: #fff;
  font-size: 28rpx;
  border-radius: 999rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: 600;
}

.bar{
  display: flex;
  position: relative;
}
.search_name_list{
  position: absolute;
  left: 180rpx;
  top: 100rpx;
  height: 1000rpx;
  width: 480rpx;
  background-color: #fff;
}

.area{
  height: 54px;
  flex: 1; 
  background-color: #fff;
  text-align: center;
  line-height: 108rpx;
  color: #323233;
  font-size: 25rpx;
  padding-left: 15rpx;
}
.icon-below-s {
  font-size: 20rpx;
}
.search_input {
  flex: 5;
}
.container {
  margin-top: 40rpx;
}

.showList{
  padding-top: 15rpx;
  background-color: #fff;
}
.showList .showItem {
  padding: 20rpx 25rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
}
.showList .showItem .content{
  flex: 5;
}
.showList .showItem .icon {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 20rpx;
}
.showList .showItem .icon text {
  font-size: 55rpx;
  margin-bottom: 8rpx;
}
.showList .showItem .content .name {
  font-size: 36rpx;
  font-weight: 600;
  padding: 10rpx 20rpx 0;
}
.showList .showItem .content .addr {
  padding: 20rpx 20rpx 0;
  font-size: 33rpx;
}
.upload {
  display: flex;
  height: 44px;
  background-color: #fff;
}
.upload text {
  line-height: 44px;
  font-size: 28rpx;
  color: #646566;
  flex: 2;
  text-align: center;
}
.upload view {
  margin-left: 25px;
  flex: 6;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.uploadBtn {
  background-color: #1989fa;
  height: 35px;
  width: 85px;
  font-size: 14px;
  color: #fff;
  position: absolute;
  left: 5px;
}